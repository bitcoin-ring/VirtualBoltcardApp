<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cardSetup.NoCardYetActivity"
        >

    <TextView
            android:id="@+id/nocardnote"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textSize="15sp"
            android:layout_margin="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/create_card_notification" />
    <ImageButton
            android:id="@+id/lnbitscreate"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:scaleType="fitCenter"
            android:layout_margin="20sp"
            app:srcCompat="@drawable/virtualboltcard_lnbits_create"
            app:layout_constraintTop_toBottomOf="@+id/nocardnote"
            app:layout_constraintStart_toStartOf="@+id/nocardnote" />

    <ImageButton
            android:id="@+id/lnbitsimport"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/virtualboltcard_lnbits_import"
            android:layout_margin="20sp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="397dp"
            app:layout_constraintTop_toBottomOf="@+id/lnbitscreate"
            app:layout_constraintStart_toStartOf="@+id/lnbitscreate" />

    <ImageButton
            android:id="@+id/manual"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/virtualboltcard_manual"
            android:layout_margin="20sp"
            app:layout_constraintTop_toBottomOf="@+id/lnbitsimport"
            app:layout_constraintStart_toStartOf="@+id/lnbitsimport" />

</androidx.constraintlayout.widget.ConstraintLayout>